{
    "default": {
      "require": [
        "src/tests/steps/api/*.ts",
        "src/tests/steps/web/*.ts"
      ],
      "requireModule": [
        "ts-node/register"
      ],
      "format": [
        "summary",
        "json:reports/cucumber.json",
        "html:reports/cucumber-report.html"
      ],
      "paths": [
        "src/tests/features/api/*.feature",
        "src/tests/features/web/*.feature"
      ],
      "parallel": 2
    }
  }
  